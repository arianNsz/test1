<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:id="@+id/actionContactUsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:paddingStart="9dp"
            android:paddingEnd="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            app:layout_constraintStart_toStartOf="@+id/instagramImgHolder"
            app:layout_constraintEnd_toEndOf="@+id/instagramImgHolder" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"/>
    <ImageView
            android:layout_width="92dp"
            android:layout_height="68dp" app:srcCompat="@drawable/instagram"
            android:id="@+id/instagramImgHolder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actionContactUsTxt" android:layout_marginTop="68dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>